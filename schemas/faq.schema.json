{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FAQ Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["q", "a"],
    "properties": {
      "q": { "type": "string", "minLength": 1 },
      "a": { "type": "string", "minLength": 1 },
      "tags": { "type": "array", "items": { "type": "string" } }
    },
    "additionalProperties": false
  }
}
